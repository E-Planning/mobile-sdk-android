<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/xandrWhite"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center">

    <Button
            android:id="@+id/btnBanner"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="32dp"
            android:background="@color/xandrCoral"
            android:textColor="@color/xandrWhite"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/banner"
    />

    <Button
            android:id="@+id/btnInterstitial"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="32dp"
            android:background="@color/xandrCoral"
            android:textColor="@color/xandrWhite"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/interstitial"/>

    <Button
            android:id="@+id/btnNative"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="32dp"
            android:background="@color/xandrCoral"
            android:textColor="@color/xandrWhite"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/native_ad"/>

    <Button
            android:id="@+id/btnVideo"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="32dp"
            android:background="@color/xandrCoral"
            android:textColor="@color/xandrWhite"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/video_ad"/>


</LinearLayout>